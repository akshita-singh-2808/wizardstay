<% layout("/layouts/boilerplate") %>
<body>
    Do you want to delete this Photo?
    <div class="yes-no">
        <form method="POST" action="/Photos/<%=id %>/?_method=DELETE">
            <button type="Submit" class="btn"
            style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem; margin-right: 10px; margin-left: 5px;">YES</button>
        </form>
        <form method="GET"action="/photos/gallery">
            <button type="Submit" class="btn"
            style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem; margin-left: 10px;">NO</button>
        </form>
    </div>
   
</body>